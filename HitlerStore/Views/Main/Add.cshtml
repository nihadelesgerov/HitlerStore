@model HitlerStore.Models.Product
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HitlerStore-Add Product</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="icon" type="image/x-icon" href="/Hitler/nazi.jpg" />

</head>
<body>
    <header>
        <nav id="navbar">
            <ul class="nav-links">
                <li><a href="#">Home</a></li>
                <li><a href="#">About</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </nav>
    </header>

    <main id="mainContent">
        <div id="form-container">
            <h2>Add Product <br />  
                (Prefer to sell products which reminds Führer )</h2>
            <form asp-action="Add" method="post" asp-controller="Main">
                <label for="productName">Product Name:</label>
                <input asp-for="ProductName" type="text" id="productName" name="productName" required>

                <label for="productCategory">Product Category:</label>
                <select asp-for="ProductCategory" id="productCategory" name="productCategory" required>
                    <option value="Clothes">Clothes</option>
                    <option value="accessoires">Aksesuarlar</option>
                    <option value="Phone">Phone</option>
                    <option value="T-Shirt">Thirst</option>
                </select>

                <label for="productBio">Product Bio:</label>
                <textarea asp-for="ProductBio" id="productBio" name="productBio" required></textarea>

                <label for="productPrice">Product Price:</label>
                <input asp-for="ProductPrice" type="number" id="productPrice" name="productPrice" step="1" min="1" required>

                <label for="productImage">Product Image:</label>
                <input type="file" id="productImage" name="productImage" accept="image/*" required>

                <button type="submit">Submit</button>
            </form>
        </div>
    </main>

    <footer>
        <p>&copy; 2024 Your Company. All rights reserved.</p>
    </footer>
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background: linear-gradient(135deg, #865D36, #93785B);
            min-height: 100vh;
            padding-bottom: 60px;
        }

        header {
            position: sticky;
            top: 0;
            background: #333;
            color: white;
            padding: 10px 0;
            z-index: 1000;
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: auto;
            padding: 0 20px;
        }

        .nav-links {
            list-style: none;
            display: flex;
            gap: 20px;
        }

            .nav-links li a {
                color: white;
                text-decoration: none;
                font-size: 16px;
            }

                .nav-links li a:hover {
                    text-decoration: underline;
                }

        .search-add-container {
            display: flex;
            gap: 10px;
        }

        #search {
            padding: 10px;
            border: none;
            border-radius: 4px;
        }

        #searchBtn, #addBtn {
            padding: 10px;
            border: none;
            border-radius: 4px;
            color: white;
            cursor: pointer;
        }

        #searchBtn {
            background-color: #ff7e5f;
        }

            #searchBtn:hover {
                background-color: #feb47b;
            }

        #addBtn {
            background-color: #4CAF50;
        }

            #addBtn:hover {
                background-color: #45a049;
            }

        #form-container {
            padding: 20px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 50px auto;
        }

            #form-container h2 {
                margin-bottom: 20px;
            }

        form {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

            form label {
                font-weight: bold;
            }

            form input, form select, form textarea {
                padding: 10px;
                border: 1px solid #ddd;
                border-radius: 4px;
            }

            form textarea {
                resize: vertical;
            }

            form button {
                padding: 10px 20px;
                border: none;
                border-radius: 4px;
                background-color: #4CAF50;
                color: white;
                cursor: pointer;
            }

                form button:hover {
                    background-color: #45a049;
                }

        footer {
            background: #333;
            color: white;
            text-align: center;
            padding: 10px 0;
            position: absolute; /* Absolute position */
            bottom: 0; /* Align to bottom */
            left: 0;
            width: 100%;
        }

    </style>

</body>
</html>